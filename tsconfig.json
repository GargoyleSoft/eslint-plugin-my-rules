{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/rules/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/rules/*.spec.ts"
  ]
}
